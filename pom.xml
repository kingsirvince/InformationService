    <build>
        <finalName>InformationService</finalName>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <!-- 为了添加第三方依赖jxl.jar，加了error-->
                <configuration>
                    <includeSystemScope>true</includeSystemScope>
                </configuration>
                <!-- 为了添加第三方依赖jxl.jar，加了error-->
            </plugin>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>${java.version}</source>
                    <target>${java.version}</target>
                    <encoding>UTF-8</encoding>
                </configuration>
            </plugin>
<!--为了把非maven仓库的jar包 jxl.jar打包部署，先把其加入到本地maven仓库-->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-install-plugin</artifactId>
                <executions>
                    <execution>
                        <id>install-external</id>
                        <phase>clean</phase>
                        <configuration>
                            <file>${basedir}/src/lib/jxl-2.6.12.jar</file>
                            <repositoryLayout>default</repositoryLayout>
                            <groupId>jxl</groupId>
                            <artifactId>jxl</artifactId>
                            <version>2.6.12</version>
                            <packaging>jar</packaging>
                            <generatePom>true</generatePom>
                        </configuration>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
<!--20200521 添加下面这段把${project.basedir}/src/lib 下的第三方jar包，打包到WEB-INF/lib/ ，有效-->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <configuration>
                    <webResources>
                <resource>
                    <directory>${project.basedir}/src/lib</directory>
                    <targetPath>WEB-INF/lib/</targetPath>
                    <includes>
                        <include>**/*.jar</include>
                    </includes>
                </resource>
                    </webResources>
                </configuration>
            </plugin>
        </plugins>

    </build>





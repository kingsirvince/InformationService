        <!--excel本地读取 不是标准maven仓库jar，无法打包，用打包完后，拆包手动投入lib的方式
        scope为system，可以加载进程序使用，但是不能打包的-->
        <!--添加外部依赖-->
            <dependency>
              <groupId>jxl</groupId>
              <artifactId>jxl</artifactId>
              <version>2.6.12</version>
              <scope>system</scope>
              <systemPath>${basedir}/src/lib/jxl-2.6.12.jar</systemPath>
